<!DOCTYPE html>
<html>

<head>
   <title>Share Music</title>
    <meta charset="utf-8">
    <meta name="author" content="ATLMendoza">
    <meta name="description" content="To get information regarding users music">
    <meta name="keywords" content="Music Museum, node.js, express, localStorage, route binding, get, post">
    <meta name="revised" content="04/20/2024"/>
    <link rel="stylesheet" href="style.css">
    <link rel="icon" href="./music.ico" type="images/ico" />
  </head>

  <body>
    <header>
      <nav>
        <a href="/"> Home </a>
        <a href="/share"> Share </a>
        <a href="/listen"> Listen </a>
      </nav>
    </header>
    <h1 style="margin-top: 50px">Music Museum</h1>
    <form  
      action = "/share"
      method = "post"
      onreset = "return delData()"
      nohistory
    >
      <fieldset>
          <legend>Music Details</legend>
  
          <!-- input type radio creates choices and user can select only one -->
          <label for="genre">Music Genre:
              <select name="genre" id="genre">
                <optgroup label="Select Genre">
                <option value="Classical">Folk/Country</option>
                <option value="FC">Folk/Country</option>  
                <option value="KPop">KPop</option>
                <option value="Jazz">Jazz</option>
                <option value="PPop">PPop</option>
                <option value="Pop">Pop</option>
                <option value="RnB">R&B</option>
                <option value="Rock">Rock</option> 
              </select>
          </label><br/><br/>
          <label for="title">Title:</label>
          <input 
            type="text"
            id="title" 
            name="title" 
            size="40%"
            onfocus="toFocus(this)" 
            onblur="toBlur(this)"
            required
          >
          <label for="artist">Artists' Name:</label>
          <input type="text" id="artist" name="artist" 
            size="40%"
            onfocus="toFocus(this)" 
            onblur="toBlur(this)"
            value="{{theValue.artist}}"
          required
            ><br/>
  
          <!-- input email type will automatically check for correct format -->
          <label for="lyrics">Lyrics By:</label>
          <input type="text" id="lyrics" name="lyrics" 
            size="40%"
            onfocus="toFocus(this)" 
            onblur="toBlur(this)"
            value="{{theValue.lyrics}}"
            required
          >
  
          <label for="youtube">Youtube Link:</label>
          <input type="url" id="youtube" name="youtube" 
            size="35%"
            onfocus="toFocus(this)" 
            onblur="toBlur(this)"
            value="{{theValue.youtube}}"
            required
          >
          <br/> 
           
          <!-- below (textarea) create an element that could accept unlimited number of text -->
          <label for="lyricssong">Lyrcs of the Song:</label><br/>
          <textarea id="lyricssong" name="lyricsong" rows="4" cols="95%"
            onfocus="toFocus(this)" 
            onblur="toBlur(this)"
          > 
          </textarea>
        <br/>
        <br/>
      
  
        <!-- below creates the two buttons for its basic functions (form submit or form reset) --> 
        <p id="btns">
          <button type="submit"> Submit </button>
          <button type="reset"> Clear </button>
        </p>
      </fieldset> 
    </form>

    <footer>
      <p>Copyright &copy; ALMendoza 2024 </p>
    </footer>
    <script>
      // to check if share.hbs is for updating then this will help in showing current values on the form
      if (`{{theValue.title}}`) {
        title.value = `{{theValue.title}}`
        lyricssong.innerHTML = `{{theValue.lyricsong}}`
        genre = document.getElementById("genre");
        // to set the dropdown menu to the genre type on database, otherwise it will always show the first in the list
        for (i in genre)
          if (genre[i].value == `{{theValue.genre}}`)
            genre[i].selected = true;
      }
    </script>
    <script src="script.js">   
    </script>
</body>

</html>